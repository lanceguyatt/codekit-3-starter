*
  box-sizing: border-box
  margin 0
  padding 0

body
  background-color var(--color-light)
  background-image url(pathjoin('images', 'foo.png'))
  font 1rem var(--font-avenir)
  height 100%
  line-height 1.5
  margin 0
  overflow-x hidden
  position relative

h1, h2, h3, h4, h5, h6
  margin-bottom 0.5em

p
  margin-bottom 1.5em
